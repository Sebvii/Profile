<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaderboardsbg"
    tools:context=".MainActivity">

    <!--
         TOP BAR SECTION
         Includes back arrow, "Profile" title, coin icon, coin value,
         plus the notification, gift, timer, settings icons on the right.
    -->
    <LinearLayout
        android:id="@+id/topBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1.0">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/imageBackArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_back"
            app:tint="@android:color/white" />

        <!-- "Profile" Title -->
        <TextView
            android:id="@+id/textProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/profile"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Push everything else to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Coin Layout (RelativeLayout to position the coin icon and text) -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clipToPadding="false"
            android:clipToOutline="false">

            <!-- Blue background with the coin value text -->
            <LinearLayout
                android:id="@+id/coinLayout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_marginStart="190dp"
                android:background="@drawable/rectangleblue"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="4dp"
                android:paddingEnd="40dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textCoinValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Coin Image Overlapping on the Right -->
            <ImageView
                android:id="@+id/imageCoinIcon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="77dp"
                android:src="@drawable/coin" />

        </RelativeLayout>
    </LinearLayout>

    <!--
         NEW LAYOUT FOR NOTIFICATION, GIFT, SETTINGS
         (Icons on the right side)
    -->
    <LinearLayout
        android:id="@+id/iconsOnRightLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/topBarLayout"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Notification icon -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Blue circle background -->
            <ImageView
                android:id="@+id/imageNotificationCircle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/circleblue" />

            <!-- Notification icon (centered) -->
            <ImageView
                android:id="@+id/imageNotification"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="-3sp"
                android:src="@drawable/notif" />
        </FrameLayout>

        <!-- Gift icon with timer text below -->
        <LinearLayout
            android:id="@+id/giftLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Blue circle background -->
                <ImageView
                    android:id="@+id/imageGiftCircle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/circleblue" />

                <!-- Gift icon placed inside the blue circle -->
                <ImageView
                    android:id="@+id/imageGift"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/gift" />
            </FrameLayout>

            <!-- Timer text below the gift icon -->
            <TextView
                android:id="@+id/textTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1d 23h"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Settings icon -->
        <FrameLayout
            android:id="@+id/settingsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Blue circle background -->
            <ImageView
                android:id="@+id/imageSettingsCircle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/circleblue" />

            <!-- Settings icon -->
            <ImageView
                android:id="@+id/imageSettings"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:src="@drawable/setting" />
        </FrameLayout>
    </LinearLayout>

    <!--
         HEADER CONTAINER
         Holds the character avatar and the speech bubble ("Hi, Rae!")
    -->
    <FrameLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarLayout"
        app:layout_constraintWidth_percent="1.0">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="320dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/character" />

        <!-- Bubble + "Hi, Rae!" text stacked -->
        <FrameLayout
            android:id="@+id/bubbleContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp">

            <!-- The bubble graphic -->
            <ImageView
                android:id="@+id/imageBubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/chat" />

            <!-- Text on top of the bubble -->
            <TextView
                android:id="@+id/textGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-20sp"
                android:layout_marginTop="-10sp"
                android:text="Hi, Rae!"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>
    </FrameLayout>

    <!--
         MAIN CONTENT SECTION WITH ROUNDED TOP
         Contains "My Badge" row, badges scroll, and Activity log
    -->
    <LinearLayout
        android:id="@+id/roundedTopContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:background="@drawable/bgblue"
        android:clipToOutline="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Title row for "My Badge" + "See all" -->
        <LinearLayout
            android:id="@+id/linearBadgeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/textMyBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Badge"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <!-- "See all" on the right -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textSeeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See all"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- Horizontal ScrollView for Badges -->
        <HorizontalScrollView
            android:id="@+id/badgeScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bgbrown"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/linearBadgeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <!-- Example Badges -->
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ecogreen" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ecoblue" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ecobrown" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ecogold" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- "Activity log" Title -->
        <TextView
            android:id="@+id/textActivityLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Activity log"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Container for Month/Year arrows + day bubbles -->
        <LinearLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/bgbrown"
            android:padding="8dp">

            <!-- Top Row: Left Arrow, Month/Year, Right Arrow -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <!-- Left Arrow -->
                <ImageButton
                    android:id="@+id/ivLeftArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/leftarrow"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp" />

                <!-- Month/Year Label -->
                <TextView
                    android:id="@+id/tvMonthYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="March 2025"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <!-- Right Arrow -->
                <ImageButton
                    android:id="@+id/ivRightArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rightarrow"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Bottom Row: Day Bubbles -->
            <LinearLayout
                android:id="@+id/activityLogLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:weightSum="4">

                <!-- 1) Selected Day Bubble -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bgcircle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MON"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- 2) Unselected Day Bubble -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bgcircle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TUE"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- 3) Unselected Day Bubble -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bgcircle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WED"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- 4) Unselected Day Bubble -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bgcircle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THU"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
