<!-- res/drawable/bubble_label.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid color of the bubble -->
    <solid android:color="#C63300" />

    <!-- Rounded corners to make it pill-shaped -->
    <corners android:radius="16dp" />

    <!-- Add some padding inside the bubble so text isn't cramped -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp" />
</shape>
