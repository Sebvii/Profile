<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer (behind the button) -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape>
            <!-- Semi-transparent black for the shadow color -->
            <solid android:color="#44000000" />

            <!-- Same corner radius as the main shape -->
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Main button layer (the gradient) -->
    <item>
        <shape>
            <gradient
                android:startColor="#2196F3"
            android:endColor="#1976D2"
            android:angle="0" />

            <corners android:radius="24dp" />

            <!-- Optional internal padding for content -->
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

</layer-list>
