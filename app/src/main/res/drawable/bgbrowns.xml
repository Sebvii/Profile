<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- A gradient from lighter brown to darker brown (adjust as needed) -->
    <gradient
        android:startColor="#AA6C39"
        android:centerColor="#9F4E27"
        android:endColor="#773014"
        android:angle="270" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional padding inside the shape -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
